<h2>Burndown by <%= y_axis_title %></h2>

<div>
  <canvas id="<%= chart_id %>" width="800" height="200"></canvas>
</div>
<script>
new Chart(document.getElementById('<%= chart_id %>').getContext('2d'), {
  type: 'scatter',
  data: {
    datasets: <%= JSON.generate(data_sets) %>
  },
  options: {
    title: {
      display: true,
      text: "Sprint Burndown"
    },
    responsive: true, // If responsive is true then it fills the screen
    scales: {
      x: {
        type: "time",
        time: {
            format: 'YYYY-MM-DD'
        },
        scaleLabel: {
          display: true,
          labelString: 'Date'
        },
        min: "<%= date_range.begin.to_s %>",
        max: "<%= (date_range.end + 1).to_s %>"

      },
      y: {
        scaleLabel: {
          display: true,
          labelString: 'Items remaining'
        },
        title: {
          display: true,
          text: "<%= y_axis_title %>"
        },
        min: 0.0
      }
    },
    plugins: {
      tooltip: {
        callbacks: {
          label: function(context) {
            return context.dataset.data[context.dataIndex].title
          }
        }
      },
      annotation: {
        annotations: {
          <% holidays().each_with_index do |range, index| %>
          holiday<%= index %>: {
            drawTime: 'beforeDraw',
            type: 'box',
            xMin: '<%= range.begin %>T00:00:00',
            xMax: '<%= range.end %>T23:59:59',
            backgroundColor: '#F0F0F0',
            borderColor: '#F0F0F0'
          },
          <% end %>
        }
      }
    }
  }
});
</script>

<div style="border: 1px solid gray; padding: 0.5em;">
<table class='standard'>
  <thead>
    <th>Sprint</th>
    <th>State</th>
    <th>Started</th>
    <th>Completed</th>
    <th>Added</th>
    <th>Removed</th>
    <th>Note</th>
  </thead>
  <tbody>
    <% @summary_stats.keys.sort_by(&:start_time).each do |sprint| %>
      <tr>
        <td><%= sprint.name %></td>
        <td><%= sprint.raw['state'] %></td>
        <% stats = @summary_stats[sprint] %>
        <td><%= stats.started %></td>
        <td><%= stats.completed %></td>
        <td><%= stats.added %></td>
        <td><%= stats.removed %></td>
        <td>
          <% if stats.points_values_changed %>
            Points values changed mid-sprint. Numbers may not add up
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Legend:
  <ul>
    <% legend.each do |line| %>
      <li><%= line %></li>
    <% end %>
  </ul>
</p>
</div>